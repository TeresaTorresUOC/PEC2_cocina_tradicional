{
  "extends": ["stylelint-config-standard-scss"],
  "plugins": [
    "stylelint-order",
    "stylelint-selector-bem-pattern"
  ],
  "rules": {
    "plugin/selector-bem-pattern": {
      "preset": "bem",
      "componentName": "[a-z]+(?:-[a-z0-9]+)*",
      "componentSelectors": {
        "initial": "^\\.({component})(?:__(?:[a-z0-9]+(?:-[a-z0-9]+)*))?(?:--(?:[a-z0-9]+(?:-[a-z0-9]+)*))?$"
      },
      "ignoreSelectors": [":root", "\\[data-.*\\]"]
    },
    "selector-class-pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*(?:__(?:[a-z0-9]+(?:-[a-z0-9]+)*))?(?:--(?:[a-z0-9]+(?:-[a-z0-9]+)*))?$",
    "order/properties-alphabetical-order": true,
    "scss/at-rule-no-unknown": [
      true,
      { "ignoreAtRules": ["use", "forward", "include", "mixin", "function", "if", "each", "for", "extend", "error", "warn", "debug", "at-root", "return", "layer"] }
    ]
  }
}