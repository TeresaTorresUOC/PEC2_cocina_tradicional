{
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "plugins": [
      "stylelint-scss",
      "stylelint-order"
    ],
    "rules": {
      "selector-class-pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*(?:__[a-z0-9]+)*(?:--[a-z0-9]+)*$", 
      "order/properties-alphabetical-order": true,
      "scss/at-rule-no-unknown": true,
      "no-empty-source": null
    }
  }
  